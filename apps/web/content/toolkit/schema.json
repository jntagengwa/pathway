        { "key": "medicalNotes", "label": "Medical notes", "type": "textarea", "required": false, "helperText": "Critical info only", "validation": null, "piiLevel": "sensitive", "renderHint": "text" },
        { "key": "parentName", "label": "Parent/guardian name", "type": "text", "required": true, "helperText": null, "validation": null, "piiLevel": "sensitive", "renderHint": "text" },
        { "key": "relationship", "label": "Relationship", "type": "text", "required": true, "helperText": null, "validation": null, "piiLevel": "low", "renderHint": "text" },
        { "key": "phone", "label": "Phone", "type": "tel", "required": true, "helperText": null, "validation": "phone", "piiLevel": "sensitive", "renderHint": "text" },
        { "key": "email", "label": "Email", "type": "email", "required": false, "helperText": null, "validation": "email", "piiLevel": "sensitive", "renderHint": "text" },
        { "key": "photographyConsent", "label": "Photography & video", "type": "choice", "required": false, "helperText": "Tick one", "validation": null, "piiLevel": "low", "renderHint": "radio", "options": ["Internal use only", "Public marketing (website/social)", "No photos/videos"] },
