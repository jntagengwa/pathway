        { "key": "specialInstructions", "label": "Special instructions", "type": "textarea", "required": false, "helperText": "Allergies, conditions, collection notes (critical only)", "validation": null, "piiLevel": "sensitive", "renderHint": "linedBox" },
        { "key": "signature", "label": "Signature", "type": "signature", "required": true, "helperText": null, "validation": null, "piiLevel": "low", "renderHint": "signature" }
      ]
