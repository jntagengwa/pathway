        { "key": "owner", "label": "Owner", "widthPercent": 20, "minWidth": 50 },
        { "key": "dueDate", "label": "Due date", "widthPercent": 15, "minWidth": 50 },
        { "key": "status", "label": "Status", "widthPercent": 10, "minWidth": 40 },
        { "key": "notes", "label": "Notes", "widthPercent": 15, "minWidth": 50 }
