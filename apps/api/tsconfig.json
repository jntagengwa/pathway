{
  "extends": "../../packages/config/tsconfig/base.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "../../",
    "paths": {
      "@pathway/auth": ["../../packages/auth/src/index.ts"],
      "@pathway/auth/*": ["../../packages/auth/src/*"],
      "@pathway/db": ["../../packages/db/src/index.ts"],
      "@pathway/db/*": ["../../packages/db/src/*"],
      "@pathway/types": ["../../packages/types/src/index.ts"],
      "@pathway/types/*": ["../../packages/types/src/*"],
      "@pathway/util": ["../../packages/util/src/index.ts"],
      "@pathway/util/*": ["../../packages/util/src/*"]
    }
  },
  "include": [
    "src",
    "../../packages/auth/src",
    "../../packages/db/src",
    "../../packages/types/src",
    "../../packages/util/src"
  ],
  "exclude": ["../../packages/**/__tests__/**"]
}
