{
  "name": "@pathway/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"tsx --tsconfig tsconfig.json src/main.ts\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --no-error-on-unmatched-pattern",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest -c jest.projects.config.ts --selectProjects unit",
    "test:watch": "jest --watch",
    "test:unit": "jest -c jest.projects.config.ts --selectProjects unit",
    "test:integration": "jest -c jest.projects.config.ts --selectProjects e2e",
    "test:e2e": "pnpm test:integration",
    "db:generate": "pnpm --filter @pathway/db run prisma:generate",
    "db:migrate": "pnpm --filter @pathway/db run prisma:migrate:dev",
    "db:deploy": "pnpm --filter @pathway/db run prisma:migrate:deploy",
    "db:reset": "pnpm --filter @pathway/db run prisma:migrate:reset"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/core": "^10.4.7",
    "@nestjs/platform-express": "^10.4.7",
    "@pathway/auth": "workspace:*",
    "@pathway/db": "workspace:*",
    "@pathway/types": "workspace:*",
    "@pathway/util": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.6.0",
    "rxjs": "^7.8.1",
    "stripe": "^14.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "dotenv": "^17.2.2",
    "@jest/test-sequencer": "^29.7.0",
    "@nestjs/testing": "^11.1.6",
    "@prisma/client": "^5.18.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.0",
    "typescript": "^5.6.2"
  }
}
