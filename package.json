{
  "name": "pathway",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "infra:up": "docker compose -f infra/docker/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker/docker-compose.yml down -v",
    "prepare": "husky",
    "infra:ps": "docker compose -f infra/docker/docker-compose.yml ps",
    "infra:logs": "docker compose -f infra/docker/docker-compose.yml logs -f",
    "db:generate": "pnpm --filter @pathway/db run generate",
    "db:migrate": "pnpm --filter @pathway/db run migrate",
    "db:deploy": "pnpm --filter @pathway/db run deploy",
    "db:seed": "pnpm --filter @pathway/db run seed"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.34.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "turbo": "^2.0.6",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.43.0"
  }
}
