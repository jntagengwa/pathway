{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": { "outputs": [] },
    "typecheck": { "outputs": [] },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": { "dependsOn": ["^build"], "outputs": [] },
    "test:unit": { "dependsOn": ["^build"], "outputs": [] },
    "test:integration": { "dependsOn": ["^build"], "outputs": [] },
    "dev": { "cache": false, "persistent": true }
  }
}
